{
  "manifest_version": 3,
  "name": "Proctoring Seguro",
  "version": "1.0",
  "description": "Extensi√≥n para un entorno de examen seguro.",
  "permissions": [
    "tabs", 
    "nativeMessaging",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://examen.asantosb.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://examen.asantosb.dev/exam/*/welcome/",
        "https://examen.asantosb.dev/exam/*/start/"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}